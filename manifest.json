{
    "manifest_version": 2,
    "name": "mobamasu-ext",
    "version": "0.1",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*://sp.pf.mbga.jp/12008305/*"],
        "css": ["content_style.css"],
        "js": ["content_script.js"]
    }],
    "browser_action": {
        "default_title": "モバマス"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.mbga.jp/"
    ]
}